<?xml version='1.0' encoding='utf-8'?>
<widget id="com.modencloud.modoapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <hook src="hooks/hookers.js" type="before_prepare" />
    <hook src="hooks/beforedep.js" type="before_deploy" />
    <name>墨斗云</name>
    <description>
        Brand new cordova project!
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="src/assets/images/android/Icon-36.png" />
        <icon density="mdpi" src="src/assets/images/android/Icon-48.png" />
        <icon density="hdpi" src="src/assets/images/android/Icon-72.png" />
        <icon density="xhdpi" src="src/assets/images/android/Icon-96.png" />
        <icon density="xxhdpi" src="src/assets/images/android/Icon-144.png" />
        <icon density="xxxhdpi" src="src/assets/images/android/Icon-192.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="res/ios/Icon-180.png" width="180" />
        <icon height="60" src="res/ios/Icon-60.png" width="60" />
        <icon height="120" src="res/ios/Icon-120.png" width="120" />
        <icon height="76" src="res/ios/Icon-76.png" width="76" />
        <icon height="152" src="res/ios/Icon-152.png" width="152" />
        <icon height="40" src="res/ios/Icon-40.png" width="40" />
        <icon height="80" src="res/ios/Icon-80.png" width="80" />
        <icon height="57" src="res/ios/Icon.png" width="57" />
        <icon height="114" src="res/ios/Icon-114.png" width="114" />
        <icon height="72" src="res/ios/Icon-72.png" width="72" />
        <icon height="144" src="res/ios/Icon-144.png" width="144" />
        <icon height="167" src="res/ios/Icon-167.png" width="167" />
        <icon height="29" src="res/ios/Icon-29.png" width="29" />
        <icon height="58" src="res/ios/Icon-58.png" width="58" />
        <icon height="50" src="res/ios/Icon-50.png" width="50" />
        <icon height="100" src="res/ios/Icon-100.png" width="100" />
        <icon height="167" src="res/ios/Icon-167.png" width="167" />
    </platform>
    <allow-navigation href="*" />
    <engine name="ios" spec="^4.5.4" />
    <engine name="android" spec="^7.0.0" />
    <engine name="browser" spec="^5.0.3" />
</widget>
