<?xml version='1.0' encoding='utf-8'?>
<widget id="com.modoucloud.apptest" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="cdvfile:*" />
    <feature name="FileTransfer">
        <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
    </feature>
    <feature name="FileOpener2">
        <param name="android-package" value="io.github.pwlin.cordova.plugins.fileopener2.FileOpener2" />
    </feature>
    <hook src="hooks/hookers.js" type="before_prepare" />
    <hook src="hooks/beforedep.js" type="before_deploy" />
    <name>墨斗云(内测版)</name>
    <description>墨斗云家居建材零售行业销售管理平台</description>
    <author email="sunxiaod168@hotmail.com" href="http://www.modoucloud.com">Modou Team</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="src/assets/images/android/ldpi.png" />
    <icon density="mdpi" src="src/assets/images/android/mdpi.png" />
    <icon density="hdpi" src="src/assets/images/android/hdpi.png" />
    <icon density="xhdpi" src="src/assets/images/android/xhdpi.png" />
    <icon density="xxhdpi" src="src/assets/images/android/xxhdpi.png" />
    <icon density="xxxhdpi" src="src/assets/images/android/xxxhdpi.png" />
    <splash density="port-hdpi" src="src/assets/images/android/launch-480-800.png" />
    <splash density="port-ldpi" src="src/assets/images/android/launch-240-320.png" />
    <splash density="port-mdpi" src="src/assets/images/android/launch-320-480.png" />
    <splash density="port-xhdpi" src="src/assets/images/android/launch-640-960.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="Orientation" value="portrait" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="target-device" value="handset" />
    <preference name="deployment-target" value="9.3" />
</widget>
